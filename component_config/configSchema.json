{
  "type": "object",
  "title": "extractor configuration",
  "required": [
    "authorization",
    "destination"
  ],
  "properties": {
    "authorization": {
      "type": "object",
      "title": "Authorization",
      "propertyOrder": 1,
      "properties": {
        "service_user_id": {
          "title": "Service User ID",
          "type": "string",
          "description": "Your Service User ID that will be used to authorize the component.",
          "propertyOrder": 1
        },
        "#service_user_token": {
          "title": "Service User Token",
          "type": "string",
          "format": "password",
          "description": "Your Service User Token that will be used to authorize the component.",
          "propertyOrder": 2
        }
      }
    },
    "test_connection": {
      "type": "button",
      "format": "sync-action",
      "propertyOrder": 2,
      "options": {
        "async": {
          "label": "TEST CONNECTION",
          "action": "testConnection"
        }
      }
    },
    "endpoints": {
      "type": "array",
      "title": "Endpoints",
      "format": "select",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "employment_history",
          "employee_lifecycle",
          "employee_work_history"
        ]
      },
      "propertyOrder": 2
    },
    "destination": {
      "type": "object",
      "title": "Destination",
      "properties": {
        "load_type": {
          "type": "string",
          "enum": [
            "full_load",
            "incremental_load"
          ],
          "options": {
            "enum_titles": [
              "Full Load",
              "Incremental Load"
            ]
          },
          "default": "full_load",
          "format": "checkbox",
          "title": "Load Type",
          "description": "If Full load is used, the destination table will be overwritten every run. If incremental load is used, data will be upserted into the destination table."
        }
      },
      "propertyOrder": 3
    }
  }
}