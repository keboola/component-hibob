{
  "type": "object",
  "title": "extractor configuration",
  "required": [
    "account",
    "source"
  ],
  "properties": {
    "account": {
      "type": "object",
      "title": "Account configuration",
      "propertyOrder": 1,
      "properties": {
        "service_user_id": {
          "title": "Service User ID",
          "type": "string",
          "propertyOrder": 1
        },
        "#service_user_token": {
          "title": "Service User Token",
          "type": "string",
          "format": "password",
          "propertyOrder": 2
        }
      }
    },
    "source": {
      "type": "object",
      "title": "Source configuration",
      "propertyOrder": 2,
      "properties": {
        "endpoints": {
          "type": "array",
          "title": "Endpoints",
          "format": "select",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": [
              "employment_history",
              "employee_lifecycle",
              "employee_work_history"
            ]
          }
        }
      }
    }
  }
}
